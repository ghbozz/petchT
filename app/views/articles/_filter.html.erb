<div class="filter">
  <div class="filter-form">
    <%= simple_form_for :filter_data, url: articles_path, method: :get, remote: true do |f| %>
      <div class="animals-filter">
        <h5>Animaux</h5>
        <hr>
        <div class="animals-icons row d-flex justify-content-around">
          <% Animal.pluck(:name).each do |animal| %>
            <div class="icon-<%= animal %>">
              <% if animal == params[:animal] %>
                <%= f.input animal.to_sym, as: :boolean, input_html: { class: 'd-none check-box', checked: true } %>
              <% else %>
                <%= f.input animal.to_sym, as: :boolean, input_html: { class: 'd-none check-box' } %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="themes-filter">
        <h5>Th√®mes</h5>
        <hr>
        <%= simple_fields_for :themes do |x| %>
          <% Article::THEMES.each do |theme| %>
            <%= x.input theme.to_sym, as: :boolean, input_html: { class: 'd-none check-box' } %>
          <% end %>
        <% end %>
      </div>
      <div class="tags-filter">
        <h5>Tags</h5>
        <hr>
        <div class="masonry-tags">
          <%= simple_fields_for :tags do |y| %>
            <% TAGS.each do |tag| %>
              <span class="tag-filter">
                <%= y.input tag.to_sym, as: :boolean, input_html: { class: 'd-none check-box' } %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>
      <%= f.submit 'Filtrer', class: 'filter-btn', style: 'display: none' %>
    <% end %>
  </div>
</div>
